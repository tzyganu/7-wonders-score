{% extends "layout.html.twig" %}
{% block content %}
<div class="row">
    <div class="col-md-12">
        <!-- general form elements -->
        <div class="box box-primary">
            <div class="box-header with-border">
                <h3 class="box-title">Search Form</h3>
                <div class="box-tools pull-right">
                    <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
                </div>
            </div>
            <!-- /.box-header -->
            <!-- form start -->
            <form role="form" action="" method="get">
                <div class="box-body">
                    {% include 'misc/search/date.html.twig' with {search: search} %}
                    <div class="form-group">
                        <label for="search-player">Player</label>
                        <select class="form-control" id="search-player" name="search[player_id][]" multiple>
                            {% for player in search.players %}
                                <option value="{{ player.value }}" {% if player.value in search.values.player_id %} selected="selected" {% endif %}>{{ player.label }}</option>
                            {% endfor %}
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="search-wonder">Wonder</label>
                        <select class="form-control" id="search-wonder" name="search[wonder_id][]" multiple>
                            {% for wonder in search.wonders %}
                                <option value="{{ wonder.value }}" {% if wonder.value in search.values.wonder_id %} selected="selected" {% endif %}>{{ wonder.label }}</option>
                            {% endfor %}
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="search-side">Side</label>
                        <select class="form-control" id="search-side" name="search[side][]" multiple>
                            {% for side in search.sides %}
                                <option value="{{ side.value }}" {% if side.value in search.values.side %} selected="selected" {% endif %}>{{ side.label }}</option>
                            {% endfor %}
                        </select>
                    </div>
                </div>
                <div class="box-footer">
                    <button type="submit" class="btn btn-primary">Search</button>
                </div>
            </form>
        </div>
    </div>
</div>
 <div class="row">
     {% include 'misc/grid.html.twig' with {'grid': grid} %}
 </div>
{% endblock %}
{% block footer %}

    <script type="text/javascript" src="{{ asset('js/select-all.js') }}"></script>
    <script type="text/javascript">
        jQuery('#search-player').selectAll();
        jQuery('#search-wonder').selectAll();
        jQuery('#search-side').selectAll();
        jQuery('select').select2();

    </script>
    {% include 'misc/grid-js.html.twig' with {'grid': grid} %}
    {% include 'misc/search/date-js.html.twig' %}
{% endblock %}
