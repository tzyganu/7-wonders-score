{% extends "layout.html.twig" %}

{% block content %}
    <div class="pull-right">
        <a href="{{ url('player/list')}}" class="btn btn-primary">Player List</a>
    </div>
    <fieldset>
        <legend>Player</legend>
        <form id="score-form" action="{{ url('player/save') }}" method="post">
            <input type="hidden" name="id" value="{{ data.player.id|default('') }}" />
            <div class="form-group">
                <label for="name">Name</label>
                <input type="text" class="form-control" id="name" name="name" value="{{ data.player.name|default('') }}" style="width:200px" required />
            </div>
            <div class="form-group">
                <button type="submit">Submit</button>
            </div>
        </form>
    </fieldset>
{% endblock %}
