{% extends "layout.html.twig" %}

{% block content %}
    <div class="pull-right">
        <a href="{{ url('category/list')}}" class="btn btn-primary">Score Category List</a>
    </div>
    <fieldset>
        <legend>Score Category</legend>
        <form id="score-form" action="{{ url('category/save') }}" method="post">
            <input type="hidden" name="id" value="{{ data.category.id|default('') }}" />
            <div class="form-group">
                <label for="name">Name</label>
                <input type="text" class="form-control" id="name" name="name" value="{{ data.category.name|default('') }}" style="width:200px" required />
            </div>
            <div class="form-group">
                <label for="sort_order">Sort Order</label>
                <input type="text" class="form-control" id="sort_order" name="sort_order" value="{{ data.category.sort_order|default('') }}" style="width:200px" required />
            </div>
            <div class="form-group">
                <label for="optional">Optional</label>
                <input type="hidden" class="form-control" id="optional_hidden" name="optional" value="0"/>
                <input type="checkbox" class="form-control" id="optional" name="optional" {% if (data.category.optional|default('')) %} checked="checked" {% endif %} value="1" style="width: 20px;"/>
            </div>
            <div class="form-group">
                <label for="icon_class">Icon Class</label>
                <input type="text" class="form-control" id="icon_class" name="icon_class" value="{{ data.category.icon_class|default('') }}"/>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Submit</button>
            </div>
        </form>
    </fieldset>
{% endblock %}
