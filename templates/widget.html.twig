<div class="{{ outerClass }}">
    <!-- small box -->
    <div class="small-box {{ cssClass }}">
        <div class="inner">
            <h3>{{ value }}</h3>
            <p>{{ label }}</p>
        </div>
        <div class="icon">
            <i class="{{ icon }}"></i>
        </div>
        {% if link %}
            <a href="{{ link }}" class="small-box-footer">
                More info <i class="fa fa-arrow-circle-right"></i>
            </a>
        {% else %}
            <a href="#" class="small-box-footer">&nbsp;</a>
        {% endif %}
    </div>
</div>
